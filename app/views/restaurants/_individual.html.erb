<div id="<%= dom_id restaurant %>" class="border card mb-3 px-3 pt-3">
  <p>
    <strong>Name:</strong>
    <%= restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= restaurant.address %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= restaurant.category %>
  </p>

  <p>
    <strong>Phone Number:</strong>
    <%= restaurant.phone_number %>
  </p>

  <p>
    <strong>Reviews:</strong>
      <ul>
        <% restaurant.reviews.each do | review | %>
        <li class='my-1'>
          Rating: <%= review.rating %> / 5 - <%= review.content %>
          <%= link_to "ðŸ—‘", review_path(review), data: {turbo_method: :delete, turbo_confirm:"Are you sure?"} %>
        </li>
        <% end %>
      </ul>
  </p>

  <p>
    <%= link_to "Create review", new_restaurant_review_path(restaurant), {:class => "btn btn-primary w-100"} %>
  </p>
</div>
